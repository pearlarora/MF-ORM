    <bean id="BCoach2" class="com.constructorInjection.BaseballCoach">
        <constructor-arg  name="ifortune" ref="fortune"/>
        <constructor-arg index="1" value="Bhavuk"/>
        <constructor-arg index="2" value="bhavukvirmani00@gmail.com"/>
